# Daily.co API key and room URL
DAILY_API_KEY=your_daily_api_key
DAILY_ROOM_URL=your_daily_room_url

# AI Model API keys
# Uncomment the model you want to use
GOOGLE_API_KEY=your_google_api_key
# OPENAI_API_KEY=your_openai_api_key

# Speech recognition (ASR) options
# Option 1: Deepgram (cloud-based)
# DEEPGRAM_API_KEY=your_deepgram_api_key
# Option 2: Silero (local, no API key needed)
USE_SILERO_ASR=true

# Text-to-speech (TTS) options
# Option 1: Cartesia (cloud-based)
# CARTESIA_API_KEY=your_cartesia_api_key
# CARTESIA_VOICE_ID=your_preferred_voice_id
# Option 2: Silero (local, no API key needed)
USE_SILERO_TTS=true
SILERO_VOICE=en_0  # Options: en_0, en_1, en_2, etc.

# Picovoice Porcupine wake word detection
PORCUPINE_ACCESS_KEY=your_porcupine_access_key
WAKE_KEYWORDS=hey_assistant,computer
